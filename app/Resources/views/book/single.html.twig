{% extends 'base.html.twig' %}

{% block body %}
    <style>
        th {
            text-align: center;
        }

        td {
            white-space: pre-wrap
        }
    </style>
    <link rel="stylesheet" href="{{ asset('css/stylesheet1.css') }}">
    <div class="container1">
        <div class="container" style="text-align:center;">
            <div style="background-color:rgba(255,255,255,0.8);" id="rcorners">
                <h1 style="color: blue">{{ book.title }}</h1>

                <div class="table-responsive">
                    <table class="table table-hover" border="1">
                        <tbody>

                        <tr>
                            <th>Title</th>
                            <td width="800">{{ book.title }}</td>
                        </tr>
                        <tr>
                            <th>Author</th>
                            <td width="800">{{ book.author }}</td>
                        </tr>
                        <tr>
                            <th>Publish Date</th>
                            <td>{{ book.publishDate|date('Y-m-d') }}</td>
                        </tr>
                        <tr>
                            <th>Pages</th>
                            <td>{{ book.pageCount }}</td>
                        </tr>
                        <tr>
                            <th>Format</th>
                            <td>{{ book.format }}</td>
                        </tr>
                        <tr>
                            <th>ISBN</th>
                            <td>{{ book.isbn }}</td>
                        </tr>
                        <tr>
                            <th>Resume</th>
                            <td>{{ book.resume }}</td>
                        </tr>
                        <tr>
                            <th>Book Cover</th>
                            <td><img src="/images/bookCovers/{{ book.image }}" style="width: 250px;"></td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

