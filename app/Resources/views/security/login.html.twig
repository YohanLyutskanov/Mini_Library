{% extends "base.html.twig" %}
{% block header %}
{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset('css/stylesheet1.css') }}">
    <div class="container1">
        <div class="container" style="background-color:rgba(255,255,255,0.6);">
            <div style="text-align:center;">
                <div class="col-md-4 col-md-offset-4">
                    <h2 style="color: blue">Welcome to Our Library</h2>
                    <h3>Please Log In</h3>
                    <br>
                    {% if error %}
                        <div class="alert alert-danger">
                            <h3>{{ error.messageKey|trans(error.messageData, 'security') }}</h3>
                        </div>
                    {% endif %}
                    <form action="{{ path('login') }}" method="post">
                        <label for="username">Username</label><br>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"/><br>

                        <label for="password">Password</label><br>
                        <input type="password" id="password" name="_password"/><br>
                        <br>
                        <button type="submit" class="btn btn-primary">Log In</button>
                    </form>

                    <br>
                    <form method="post" action="{{ path('user_register_form') }}">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                    <br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}